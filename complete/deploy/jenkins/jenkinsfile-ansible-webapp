node {
  stage('Init') {
    checkout scm
  }

  stage('Build') {
    sh '''
        cd complete
        mvn clean package
        mv target/*.war ROOT.war
    '''
  }

  stage('Deploy') {

    azureWebAppPublish azureCredentialsId: "c0d8e81c-2c65-4fa9-95cd-89c2a7450e40",
                       resourceGroup: "hiepit07", 
                       appName: "hiepit07", 
                       filePath: "ROOT.war"
  }
}
